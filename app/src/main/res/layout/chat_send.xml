<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_margin="5dp"

        android:animateLayoutChanges="true"
        android:orientation="horizontal">





        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:elevation="0dp"
            android:paddingHorizontal="5dp"

            android:paddingVertical="3sp"
            android:layout_gravity="center|end"
            android:gravity="center|end"
            android:layout_marginStart="100dp"
            android:background="@drawable/text_msg_back"
            android:backgroundTint="@color/send_item_color"
            android:orientation="vertical">


            <TextView
                android:id="@+id/sendMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:textStyle="normal"
                android:text="Hello this is "
                android:gravity="center_vertical"
                android:textColor="#313333"
                android:textSize="15dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sendMsg"
                android:layout_marginTop="3dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center|end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sendTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:gravity="bottom"
                    android:paddingHorizontal="10dp"
                    android:text="7:10 AM"
                    android:textColor="@color/dark_gray"
                    android:textSize="10dp">

                </TextView>






            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <ImageView
            android:layout_margin="5dp"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/hw_img"
            android:layout_gravity="center"
            android:src="@drawable/user"/>

    </LinearLayout>


</RelativeLayout>