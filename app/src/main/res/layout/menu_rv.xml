<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp"
    android:elevation="0dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="150dp"

            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:id="@+id/menuImage"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="menuTitle"
            android:layout_toRightOf="@id/menuImage"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/menuTitle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="252"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/menuPrice"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/menuImage"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/rattingBar"
            android:layout_below="@id/menuTitle"
            style="?android:attr/ratingBarStyleSmall"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="menuTitle"
            android:layout_below="@id/rattingBar"
            android:layout_toRightOf="@id/menuImage"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/menuDes"/>

        <Button
            android:id="@+id/addtocart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/menuDes"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/menuImage"
            android:text="Add to cart" />


<RelativeLayout
    android:layout_width="match_parent"
    android:visibility="gone"
    android:id="@+id/sssss"
    android:layout_below="@id/menuDes"
    android:layout_toRightOf="@id/menuImage"

    android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/ic_baseline_add_24"
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        />


    <TextView
        android:id="@+id/textt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/add"
        />



    <ImageView
        android:src="@drawable/minus"
        android:id="@+id/minus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/textt"
        />

</RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
